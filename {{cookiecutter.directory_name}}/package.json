    "email": "{{ cookiecutter.author_email }}",
    "web": "{{ cookiecutter.author_web }}"
  },
  "license": "{{ cookiecutter.license }}",
  "bugs": {
    "url": "{{ cookiecutter.git_repository ~ '/issues' }}"
  },
  "homepage": "{{ cookiecutter.git_repository ~ '#readme' }}",
  "devDependencies": {
    "prettier": "^2.5.1",
    "reveal.js": "^4.2.1",
    "vite": "^2.7.13"

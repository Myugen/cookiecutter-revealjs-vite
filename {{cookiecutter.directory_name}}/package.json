  "version": "{{ cookiecutter.version }}",
  "description": "{{ cookiecutter.project_description }}",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "{{ cookiecutter.git_repository }}"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "presentation",
    "revealjs"
  ],
  "author": {
